@using AS_Assignment_2_Pt_2.Model
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Customer> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AS_Assignment_2_Pt_2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AS_Assignment_2_Pt_2.styles.css" asp-append-version="true" />
    <script src="https://www.google.com/recaptcha/api.js?render=6LesYmApAAAAAPDi1cKdyKM4fnurSPo3Ji3tDCw-"></script>
    <script type="text/javascript">
        function validate() {
            var str = document.getElementById("password").value;
            const lowercase = /[a-z]/;
            const uppercase = /[A-Z]/;
            const nums = /[0-9]/;
            const specialChars = /[!#$%&*()_+=,.?/-]/;

            if (str.length >= 12 && lowercase.test(str) && uppercase.test(str) && nums.test(str) && specialChars.test(str)) {
                document.getElementById("feedback").innerHTML = "Strong Password";
                document.getElementById("feedback").style.color = "green";
            }
            else { 
                document.getElementById("feedback").innerHTML = "Weak Password";
                document.getElementById("feedback").style.color = "red";
            }
        }
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">AS_Assignment_2_Pt_2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    @{
                        if (SignInManager.IsSignedIn(User))
                        {
                                                <ul class="navbar-nav flex-grow-1">
                                                    <li class="nav-item">
                                                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                                                    </li>
                                                </ul>

                                                <ul class="navbar-nav d-flex justify-content-end">
                                                    <li class="="nav-item>
                                                        <a class="btn btn-primary" asp-area="" asp-page="/Logout">Logout</a>
                                                    </li>
                                                </ul>
                        }
                        else
                        {
                                                <ul class="navbar-nav d-flex justify-content-end flex-grow-1">
                                                    <li class="nav-item">
                                                        <a class="btn btn-primary" asp-page="/Login">Login</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="btn btn-primary" asp-page="/Register">Register</a>
                                                    </li>
                                                </ul>
                        }
                    }
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - AS_Assignment_2_Pt_2 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>